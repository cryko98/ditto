<script>
  // â”€â”€ State â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  let sessionId = null;
  let pollInterval = null;
  let logOffset = 0;
  let isBuilding = false;
  let builtHTML = null;
  let builtFiles = {};
  let panelOpen = true;

  // â”€â”€ Panel toggle â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function togglePanel() {
    panelOpen = !panelOpen;
    document.getElementById('panel').classList.toggle('hidden', !panelOpen);
  }

  // â”€â”€ Tab switching â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function switchTab(name) {
    ['build','files','code'].forEach(t => {
      document.getElementById('tab-' + t).classList.toggle('active', t === name);
      document.getElementById('tc-' + t).classList.toggle('active', t === name);
    });
  }

  // â”€â”€ Fill description â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function fillDesc(el) {
    document.getElementById('desc').value = el.textContent;
    document.getElementById('desc').focus();
  }

  // â”€â”€ Status indicator â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function setStatus(state) {
    const dot = document.getElementById('statusDot');
    const txt = document.getElementById('statusText');
    dot.className = 'dot ' + state;
    txt.textContent = { idle: 'Idle', building: 'Buildingâ€¦', done: 'Done âœ“', error: 'Error' }[state] || state;
  }

  // â”€â”€ Log â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function addLog(msg, level) {
    const area = document.getElementById('logs');
    const empty = area.querySelector('.log-empty');
    if (empty) empty.remove();
    const div = document.createElement('div');
    div.className = 'log-line ' + level;
    div.textContent = msg;
    area.appendChild(div);
    area.scrollTop = area.scrollHeight;
    // update building msg
    if (level === 'tool' || level === 'info') {
      document.getElementById('buildingMsg').textContent = msg.slice(0, 70);
    }
  }

  // â”€â”€ Start build â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  async function startBuild() {
    if (isBuilding) return;
    const desc = document.getElementById('desc').value.trim();
    if (!desc) { alert('Please describe your app first!'); return; }

    isBuilding = true;
    builtHTML = null;
    builtFiles = {};
    logOffset = 0;

    setStatus('building');
    const btn = document.getElementById('buildBtn');
    btn.textContent = 'â³ Buildingâ€¦';
    btn.disabled = true;
    btn.classList.add('running');

    // Reset UI
    document.getElementById('logs').innerHTML = '';
    document.getElementById('emptyState').style.display = 'none';
    document.getElementById('errorBanner').classList.remove('visible');
    document.getElementById('appFrame').style.display = 'none';
    document.getElementById('buildingOverlay').classList.add('visible');
    document.getElementById('filesList').innerHTML = '<div class="no-files">Building...</div>';
    document.getElementById('downloadBtn').disabled = true;
    document.getElementById('codeViewer').textContent = '// Building...';

    try {
      const res = await fetch('/api/build', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ description: desc })
      });
      const data = await res.json();
      if (data.error) {
        showError(data.error);
        return;
      }
      sessionId = data.session_id;
      startPolling();
    } catch (e) {
      showError('Failed to connect: ' + e.message);
    }
  }

  // â”€â”€ Polling â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function startPolling() {
    if (pollInterval) clearInterval(pollInterval);
    pollInterval = setInterval(poll, 800);
    poll(); // immediate first call
  }

  async function poll() {
    if (!sessionId) return;
    try {
      const res = await fetch(`/api/poll/${sessionId}?offset=${logOffset}`);
      if (!res.ok) return;
      const data = await res.json();

      // Render new logs
      for (const log of data.logs) {
        addLog(log.message, log.level);
      }
      logOffset = data.offset;

      if (data.status === 'done') {
        clearInterval(pollInterval);
        isBuilding = false;
        resetBtn();
        setStatus('done');
        if (data.result) {
          showApp(data.result);
        }
      } else if (data.status === 'error') {
        clearInterval(pollInterval);
        isBuilding = false;
        resetBtn();
        showError('Build failed â€” check logs for details.');
      }
    } catch (e) {
      // network hiccup, retry
    }
  }

  // â”€â”€ Show built app â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function showApp(result) {
    builtHTML = result.html;

    document.getElementById('buildingOverlay').classList.remove('visible');
    const frame = document.getElementById('appFrame');
    frame.srcdoc = builtHTML;
    frame.style.display = 'block';
    document.getElementById('urlText').textContent = 'App preview (in-browser)';

    // Update files tab
    const fl = document.getElementById('filesList');
    fl.innerHTML = '';
    const icons = { html: 'ğŸŒ', css: 'ğŸ¨', js: 'âš¡', py: 'ğŸ' };
    for (const f of result.files) {
      const ext = f.split('.').pop();
      const item = document.createElement('div');
      item.className = 'file-item';
      item.innerHTML = `<span class="file-icon">${icons[ext] || 'ğŸ“„'}</span><span>${f}</span>`;
      item.onclick = () => loadFileCode(f);
      fl.appendChild(item);
    }

    document.getElementById('downloadBtn').disabled = false;
    document.getElementById('codeViewer').textContent = builtHTML;
    switchTab('build');
  }

  async function loadFileCode(path) {
    if (!sessionId) return;
    // For now show the main HTML
    document.getElementById('codeViewer').textContent = builtHTML || '// No code available';
    switchTab('code');
  }

  // â”€â”€ Error â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function showError(msg) {
    isBuilding = false;
    resetBtn();
    setStatus('error');
    document.getElementById('buildingOverlay').classList.remove('visible');
    document.getElementById('errorBanner').classList.add('visible');
    document.getElementById('errorMsg').textContent = msg;
  }

  function resetBtn() {
    const btn = document.getElementById('buildBtn');
    btn.textContent = 'âš¡ Build App';
    btn.disabled = false;
    btn.classList.remove('running');
  }

  // â”€â”€ Download â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function downloadHTML() {
    if (!builtHTML) return;
    const blob = new Blob([builtHTML], { type: 'text/html' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'ditto-app.html';
    a.click();
    URL.revokeObjectURL(url);
  }

  // â”€â”€ Open fullscreen â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function openFullscreen() {
    if (!builtHTML) return;
    const win = window.open('', '_blank');
    win.document.write(builtHTML);
    win.document.close();
  }
</script>
</body>
</html>
